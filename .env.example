# =============================================================================
# Django Backend Environment Variables for Render Deployment
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# REQUIRED: Security
# =============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-super-secret-key-here-change-in-production

# =============================================================================
# REQUIRED: Database (Render PostgreSQL)
# =============================================================================
# Render will provide this automatically as DATABASE_URL
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://your-db-user:your-db-password@your-host:5432/your-db

# =============================================================================
# REQUIRED: CORS & Security
# =============================================================================
# Your frontend deployed URL (e.g., https://your-frontend.onrender.com)
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com

# Your Render backend URL for CSRF
CSRF_TRUSTED_ORIGINS=https://your-backend.onrender.com

# Frontend URL (optional, used by deployment settings)
FRONTEND_URL=https://your-frontend.onrender.com

# =============================================================================
# OPTIONAL: Email Configuration (for password reset, etc.)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OPTIONAL: Django Settings
# =============================================================================
DEBUG=False
ALLOWED_HOSTS=your-backend.onrender.com

# =============================================================================
# OPTIONAL: Create superuser during deployment (set to True if needed)
# =============================================================================
CREATE_SUPERUSER=False
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
# Note: Password must be set separately or use environment variable

# =============================================================================
# JWT Settings (optional overrides)
# =============================================================================
# ACCESS_TOKEN_LIFETIME=24h
# REFRESH_TOKEN_LIFETIME=7d
